pipeline {
    agent any

    tools {
        maven 'MAVEN_HOME'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean test -P TestCases'
            }
        }

    }

    post {
        always {
            junit 'target/surefire-reports/*.xml'
            echo "Pipeline completed!"
        }
        failure {
            echo "âŒ Build Failed!"
        }
        success {
            echo "ğŸ‰ Build Passed!"
        }
    }
}
